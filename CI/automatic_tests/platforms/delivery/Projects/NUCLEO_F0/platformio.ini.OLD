[common]
default_envs = NUCLEO-F042K6

[env:NUCLEO-F042K6]
platform = ststm32
board = NUCLEO-F042K6
debug_build_flags = -Os -ggdb2 -g2
framework = stm32cube

build_flags = 
    -I inc
    -include node_config.h

lib_extra_dirs = /home/luos/Dev/Jerome/Luos

platform_packages = toolchain-gccarmnoneeabi@~1.90301.0

lib_deps =
    Luos@^2.0.0
    LuosHAL
    Led
    Button
    Light_sensor
    Potentiometer
    Servo	
    Stepper


debug_tool = stlink
